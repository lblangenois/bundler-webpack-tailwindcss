{
	"name": "bundler-webpack-tailwind",
	"version": "0.1.0",
	"description": "Bundler starter for bundle assets file using Webpack and PostCSS, with support for TailwindCSS, Sass and fonts files",
	"main": "./src/scripts/main.ts",
	"author": "Logan Blangenois <hello@logan-blangenois.be>",
	"license": "MIT",
	"scripts": {
		"clean": "rimraf dist",
		"dev": "yarn clean && webpack --mode=development --config webpack.config.js --watch",
		"build": "yarn clean && webpack --mode=production --config webpack.config.js"
	},
	"devDependencies": {
		"@babel/core": "^7.21.0",
		"@babel/plugin-transform-modules-commonjs": "^7.21.2",
		"@babel/preset-env": "^7.20.2",
		"autoprefixer": "^10.4.13",
		"babel-loader": "^9.1.2",
		"babel-plugin-add-module-exports": "^1.0.4",
		"css-loader": "^6.7.3",
		"css-minimizer-webpack-plugin": "^4.2.2",
		"dotenv": "^16.0.3",
		"file-loader": "^6.2.0",
		"mini-css-extract-plugin": "^2.7.2",
		"node-sass-glob-importer": "^5.3.2",
		"postcss": "^8.4.21",
		"postcss-extend": "^1.0.5",
		"postcss-loader": "^7.0.2",
		"rimraf": "^4.1.2",
		"sass": "^1.58.3",
		"sass-loader": "^13.2.0",
		"tailwindcss": "^3.2.7",
		"terser-webpack-plugin": "^5.3.6",
		"ts-loader": "^9.4.2",
		"typescript": "^4.9.5",
		"uglify-js": "^3.17.4",
		"url-loader": "^4.1.1",
		"webpack": "^5.75.0",
		"webpack-cli": "^5.0.1",
		"webpack-dev-server": "^4.11.1"
	}
}
